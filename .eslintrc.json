{
  "plugins": ["prettier"],
  "extends": [
    "next/core-web-vitals",
    "prettier",
  ],
  "rules": {
    "prefer-const": "error",
    "no-console": "error",
    "import/no-duplicates": "error",
    "linebreak-style": ["error", "unix"],
    "no-restricted-imports": [
      "error",
      {
        "patterns": ["@radio/features/*/*"]
      }
    ]
  }
}